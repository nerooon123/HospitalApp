<Page x:Class="HospitalApp.View.Pages.MainWindowPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HospitalApp.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainWindowPage">

    <Grid>
        <UniformGrid Columns="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Логин"/>
            <TextBox x:Name="Login"/>
            <TextBlock Text="Пароль"/>
            <TextBox x:Name="Password"/>
            <Button x:Name="Authorization" Content="Авторизация" Click="Authorization_Click"/>
            <Button x:Name="Registration" Content="Регистрация" Click="Registration_Click"/>
        </UniformGrid>
    </Grid>
</Page>
